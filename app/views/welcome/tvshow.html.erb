
<h1>TvShow</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Language</th>
      <th>Genre</th>
      <th>Year release</th>
      <th>Type</th>
      <th>Rating Scale(1-10)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tvshows.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.language %></td>
        <td><%= video.genre %></td>
        <td><%= video.year_release %></td>
        <td><%= video.type %></td>
        <td><%= video.rating %></td>
        <td><%= link_to 'Show', video_path(video) %></td>
       
        <td><%= link_to 'Destroy', video_path(video), method: :delete, data: { confirm: 'Are you sure?' } %></td> 

        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_video_path %>
